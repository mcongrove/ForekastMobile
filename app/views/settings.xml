<Alloy>
	<NavigationWindow id="NavWindow" platform="ios" formFactor="handheld">
		<Window id="SettingsWindow" title="Settings">
			<RightNavButton>
				<Button systemButton="Ti.UI.iPhone.SystemButton.DONE" onClick="closeSettings" />
			</RightNavButton>
			
			<TableView id="Table" />
		</Window>
	</NavigationWindow>
	
	<Window id="SettingsWindow" title="Settings" platform="ios" formFactor="tablet">
		<TableView id="Table" />
	</Window>
	
	<Window id="SettingsWindow" title="Settings" platform="android">
		<ActionBar displayHomeAsUp="true" onHomeIconItemSelected="closeSettings" platform="android"/>

		<TableView id="Table" />
	</Window>
</Alloy>